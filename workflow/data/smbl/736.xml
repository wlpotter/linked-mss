            <textLang mainLang="syr">Syriac</textLang>
            <msItem xml:id="a1" n="1">
              <locus from="2b" to="68a">Foll. 2b-68a</locus>
              <title ref="http://syriaca.org/work/26" type="supplied">Ezekiel, according to the Peshitta version</title>
              <rubric xml:lang="syr">ܢܒܝܘܬܗ ܕܚܙܩܝܐܝܠ<locus from="2a" to="2a"/>
              </rubric>
              <finalRubric xml:lang="syr">ܫܠܡܬ ܢܒܝܘܬܗ ܕܚܙܩܝܐܝܠ ܡܫܒܚܐ ܕܢܒ̈ܝܐ<locus from="68a" to="68a"/>
              </finalRubric>
              <colophon>
